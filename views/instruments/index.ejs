<%- include('../partials/header') %>

<body class="bg-dark text-light">
  <div class="container mt-5">
    <!-- || ================================ || -->
    <!-- || list of instruments -->
    <!-- || ================================ || -->
    <div class="row">
      <div id="nav-vocals" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#vocals"
          role="button"
          aria-expanded="false"
          aria-controls="vocals"
        >
          Vocals
        </a>
        <div class="collapse" id="vocals">
          <div class="card card-body">
            <% vocals.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-strings" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#strings"
          role="button"
          aria-expanded="false"
          aria-controls="strings"
        >
          Strings
        </a>
        <div class="collapse" id="strings">
          <div class="card card-body">
            <% strings.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-keyboards" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#keyboards"
          role="button"
          aria-expanded="false"
          aria-controls="keyboards"
        >
          Keyboards
        </a>
        <div class="collapse" id="keyboards">
          <div class="card card-body">
            <% keyboards.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-brass" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#brass"
          role="button"
          aria-expanded="false"
          aria-controls="brass"
        >
          Brass
        </a>
        <div class="collapse" id="brass">
          <div class="card card-body">
            <% brass.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-woodwinds" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#woodwinds"
          role="button"
          aria-expanded="false"
          aria-controls="woodwinds"
        >
          Woodwinds
        </a>
        <div class="collapse" id="woodwinds">
          <div class="card card-body">
            <% woodwinds.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-percussion" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#percussion"
          role="button"
          aria-expanded="false"
          aria-controls="percussion"
        >
          Percussion
        </a>
        <div class="collapse" id="percussion">
          <div class="card card-body">
            <% percussion.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
      <div id="nav-other" class="col">
        <a
          class="btn btn-warning"
          data-bs-toggle="collapse"
          href="#other"
          role="button"
          aria-expanded="false"
          aria-controls="other"
        >
          Other
        </a>
        <div class="collapse" id="other">
          <div class="card card-body">
            <% other.forEach(elem => { %>
            <a href="/instruments/<%= elem._id %> " class="my-2"><%= elem.name %></a>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <!-- || ================================ || -->
    <!-- || new instrument form -->
    <!-- || ================================ || -->
    <% if (user) { %>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <form id="new-inst-form" action="/instruments" method="POST">
          Instrument:
          <input
            name="name"
            type="text"
            class="form-control"
            placeholder="Instrument name"
          />
          <br />
      </div>
      <div class="col-md-6 offset-md-3">
          Type:
          <select name="type" id="genre-select" class="form-select">
            <option value="vocals">Vocals</option>
            <option value="strings">Strings</option>
            <option value="brass">Brass</option>
            <option value="woodwinds">Woodwinds</option>
            <option value="keyboards">Keyboards</option>
            <option value="percussion">Percussion</option>
            <option value="other">Other</option>
          </select>
          <br>
          <input type="submit" class="btn btn-primary" value="Add a new instrument" />
        </form>
        <br>
        <br>
      </div>
    </div>
    <% } else {%>
    <div class="fw-light text-center">Sign in to add a new Instrument!</div>
    <br>
    <br>
    <% } %> <%- include('../partials/footer') %>
  </div>
</body>