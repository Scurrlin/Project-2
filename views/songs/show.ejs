<%- include('../partials/header') %>
<body class="bg-dark text-light">
  <br />
  <br />
  <div class="container">
    <div class="col-md-8 offset-md-2">
      <!-- || ================================ || -->
      <!-- || name -->
      <!-- || ================================ || -->
      <div
        class="col-md-10 offset-md-1 h2 pb-2 mb-4 text-light border-bottom border-light d-flex justify-content-center"
      >
        <%= songs.name %>
      </div>
      <!-- || ================================ || -->
      <!-- || cover art -->
      <!-- || ================================ || -->
      <div class="col-md-10 offset-md-1 d-flex justify-content-center">
        <% if (songs.ca) { %>
        <img
          class="rounded mx-auto d-block"
          src="<%= songs.ca %>"
          alt="cover art"
        />
        <% } else { %>
        <p><small>No pic? :(</small></p>
        <% } %>
      </div>
      <br />
      <!-- || ================================ || -->
      <!-- || genre -->
      <!-- || ================================ || -->
      <div class="col-md-10 offset-md-1 d-flex flex-column">
        <div class=""><%= songs.genre %></div>
        <div class="">
          <% songs.forEach(song => { %> <%= song.name %> <% }) %>
        </div>
      </div>
      <br />
      <!-- || ================================ || -->
      <!-- || details -->
      <!-- || ================================ || -->
      <div
        class="col-md-10 offset-md-1 h4 pb-2 mb-4 text-light border-bottom border-light d-flex justify-content-center"
      >
        Details:
      </div>
      <div class="col-md-10 offset-md-1"><%= songs.details %></div>
      <br />
      <br />
      <!-- || ================================ || -->
      <!-- || video carousel -->
      <!-- || ================================ || -->
      <div
        class="col-md-10 offset-md-1 h4 pb-2 mb-4 text-light border-bottom border-light d-flex justify-content-center"
      >
        Videos:
      </div>
      <% if (songs.video.length) { %>
      <div
        id="carousel-vid"
        class="carousel slide col-md-10 offset-md-1 d-flex align-items-center"
        data-bs-ride="false"
        data-bs-interval="false"
      >
        <div class="carousel-inner">
          <% songs.video.forEach(v => { %>
          <div class="carousel-item active">
            <iframe
              width="640"
              height="390"
              src="https://www.youtube.com/embed/<%= v.url %> "
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
          <% }) %>
        </div>
        <button
          class="carousel-control-prev my-auto"
          type="button"
          data-bs-target="#carousel-vid"
          data-bs-slide="prev"
          style="max-height: 50px; max-width: 50px"
        >
          <span class="carousel-control-prev-icon" aria-hidden="false"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next my-auto"
          type="button"
          data-bs-target="#carousel-vid"
          data-bs-slide="next"
          style="max-height: 50px; max-width: 50px"
        >
          <span class="carousel-control-next-icon" aria-hidden="false"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <% } else { %>
      <small class="d-flex justify-content-center">
        Link a video to get inspired!
      </small>
      <% } %>
      <br />
      <!-- || ================================ || -->
      <!-- || add video -->
      <!-- || ================================ || -->
      <div class="col-md-10 offset-md-1">
        <div class="mb-3">
          <form action="/ysbpsongs/<%= songs._id %>/videos" method="POST">
            <label for="video-url" class="form-label">
              Link a YouTube video:
            </label>
            <input
              name="url"
              type="url"
              class="form-control"
              pattern="https://.*"
              id="video-url"
              placeholder="https://youtube.com/"
            />
            <br />
            <input class="btn btn-primary" type="submit" value="Add A Video" />
          </form>
        </div>
      </div>
      <br />
      <!-- || ================================ || -->
      <!-- || entries table -->
      <!-- || ================================ || -->
      <div class="col-md-10 offset-md-1 d-flex justify-content-center">
        <table class="table text-light">
          <thead>
            <tr>
              <th>User</th>
              <th>Date</th>
              <th>Entry</th>
            </tr>
          </thead>
          <tbody class="table text-light">
            <% if (songs.entry.length) { %>
            <!-- EJS break -->
            <% songs.entry.forEach(elem => { %>
            <tr>
              <td class="entry-user">
                <img
                  alt="avatar"
                  src="<%= elem.userAvatar %>"
                  referrerpolicy="no-referrer"
                  style="border-radius: 50%; max-width: 50px; max-height: 50px"
                />
                <%= elem.userName %>
              </td>
              <td><%= elem.createdAt.toLocaleDateString() %></td>
              <td><%= elem.content %></td>
              <td>
                <% if (user?._id.equals(elem.user)) { %>
                <form
                  action="/entries/<%= elem._id %>?_method=DELETE"
                  method="POST"
                >
                  <button
                    type="submit"
                    class="btn-close btn-close-white"
                    aria-label="Close"
                  ></button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
      <% if (!songs.entry.length) { %>
      <small class="d-flex justify-content-center">
        Document your practice sessions here!
      </small>
      <% } %>
      <br />
      <br />
      <!-- || ================================ || -->
      <!-- || entries submission -->
      <!-- || ================================ || -->
      <div class="form-floating">
        <% if (user) { %>
        <form
          class="col-md-10 offset-md-1"
          id="entry-form"
          action="/ysbpsongs/<%= songs._id %>/entries"
          method="POST"
        >
          <textarea
            name="content"
            type="text"
            value="Details"
            rows="4"
            cols="40"
            maxlength="500"
            class="form-control"
            placeholder="Document your practice sessions here!"
          ></textarea>
          <br />
          <input class="btn btn-primary" type="submit" value="Add a entry" />
        </form>
        <% } %>
      </div>
      <br />
      <br />
      <!-- || ================================ || -->
      <!-- || footer nav buttons -->
      <!-- || ================================ || -->
      <div class="d-flex justify-content-center col-md-10 offset-md-1">
        <a class="btn btn-outline-primary mx-2" href="/ysbpsongs">BACK</a>
        <!-- Button trigger modal -->
        <% if (user) { %>
        <a
          href="/ysbpsongs/<%= songs._id %>/edit "
          class="btn btn-outline-primary"
        >
          EDIT
        </a>
        <button
          type="button"
          class="btn btn-outline-danger mx-2"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          DELETE SONG
        </button>
        <% } %>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-dark">
                <h5 class="modal-title text-light" id="exampleModalLabel">
                  Delete A Song
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body bg-secondary border-bottom-0">
                Are you sure you want to delete this song?
              </div>
              <div class="modal-footer bg-secondary border-top-0">
                <button
                  type="button"
                  class="btn btn-outline-light"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <form
                  action="/ysbpsongs/<%= songs._id %>?_method=DELETE"
                  method="POST"
                >
                  <button type="submit" class="btn btn-danger">
                    DELETE THIS SONG
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br />
    </div>
  </div>
</body>
<%- include('../partials/footer') %>