<%- include('../partials/header') %>

  <section id="show-page">
    <div>Title: </div>
    <div>
      <%= song.title %>
    </div>
    <div>BPM: </div>
    <div>
      <%= song.bPM %>
    </div>
    <div>Artist: </div>
    <div>
      <%= song.artist %>
    </div>
    <div>Future Performance?: </div>
    <div>
      <%= song.futurePerformance ? 'Yes' : 'Nope' %>
    </div>
  
  <% if (user) { %>
    <br><br>
    <h2>Comments</h2>
    <form id="add-review-form" method="POST" action="/movies/<%= movie._id %>/reviews">
      <label>Review:</label>
      <textarea name="content"></textarea>
      <label>Rating:</label>
      <input type="submit" value="Add Comment">
    </form>
    <% } %>


      <% if (song.reviews.length) { %>
        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Date</th>
              <th>Comment</th>
              <th>Completed?</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0 %>
            <% song.reviews.forEach(function(r) { %>
              <tr>
                <td class="comment-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
                <td><%= r.createdAt.toLocaleDateString() %></td>
                <td><%= r.content %></td>
                <td>
                  <% if (user?._id.equals(r.user)) { %>
                    <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                      <button type="submit">X</button>
                    </form>
                  <% } %>
                </td>
              </tr>
         
            <% }); %>
            <tr>
              <td colspan="3"></td>
              <td><strong><%= (total / song.reviews.length).toFixed(1) %></strong></td>
            </tr>
   
          </tbody>
        </table>
        
        <% } else { %>
          <h5>No Comments Yet</h5>
          <% } %>


            <%- include('../partials/footer') %>